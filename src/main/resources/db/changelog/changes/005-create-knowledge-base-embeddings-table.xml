<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="005-create-knowledge-base-embeddings-table" author="temporal-ai">
        <createTable tableName="knowledge_base_embeddings">
            <column name="kb_id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="embedding_vector" type="REAL[]">
                <constraints nullable="false"/>
            </column>
            <column name="embedding_model" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <addForeignKeyConstraint
            baseTableName="knowledge_base_embeddings"
            baseColumnNames="kb_id"
            constraintName="fk_kb_embeddings_kb"
            referencedTableName="knowledge_base"
            referencedColumnNames="kb_id"
            onDelete="CASCADE"/>
        
        <createIndex indexName="idx_kb_embeddings_model">
            <column name="embedding_model"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
